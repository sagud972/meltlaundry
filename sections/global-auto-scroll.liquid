<slider-element class="swiper-container carousel d-block position-relative arrow-outside py-4" style="background-color: {{ section.settings.section_bg_color }}; color: {{ section.settings.section_txt_color }}">
<div class="swiper text-animation swiper-slider swiper-container-free-mode" data-slider='{
    "loop": true,
    "freeMode":true,
    "autoplay": {
        "delay": 10,
        "disableOnInteraction": false
    },
    "slidesPerView": "auto",
    "speed": 5000,
    "grabCursor": true,
    "mousewheelControl": true,
    "keyboardControl": true
}'>
    <div class="swiper-wrapper">
        {% for block in section.blocks %}
            <div class="swiper-slide px-4">
                <p class="mb-0 font-size-sm text-uppercase fw-medium">{{ block.settings.heading }}</p>
            </div>
        {% endfor %}
    </div>
</div>
</slider-element>
{% schema %}
{
    "name": "Auto Scroll Info",
    "tag": "section",
    "settings":[
        {
            "type": "header",
            "content": "Styling"
        },
        {
            "type": "color",
            "id": "section_bg_color",
            "label": "Background Color",
            "default": "#FAFAF7"
        },
        {
            "type": "color",
            "id": "section_txt_color",
            "label": "Text Color",
            "default": "#222222"
        }
    ],
    "blocks": [
        {
        "type": "heading",
        "name": "Text",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "default": "Text",
                "label": "Heading"
            }
        ]
    }
  ],
  "presets": [
    {
      "name": "Auto Scroll Info"
    }
  ]
}
{% endschema %}

<style>
    .text-animation .swiper-slide{
        width: auto !important;
    }

    .swiper-container-free-mode .swiper-wrapper {
        transition-timing-function: linear;
    }
</style>