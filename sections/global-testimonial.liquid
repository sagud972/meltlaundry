<link rel="stylesheet" href="{{ 'global-testimonial.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'global-testimonial.css' | asset_url | stylesheet_tag }}</noscript>

{% assign blocks_size = section.blocks | size %}
<section class="section-content position-relative" data-section-id="{{ section.id }}" style="background: {{ section.settings.section_bg_color }}; color:{{ section.settings.section_text_color }}">
    <div class="{% if section.settings.fluid_layout %}container-fluid{% else %}container{% endif %}">
        <div class="row mb-3">
            <div class="col-12 text-center">
                {% if section.settings.heading_txt != blank %}
                  <h6 class="section-title text-uppercase">{{ section.settings.heading_txt }}</h6>
                {% endif %}
 
                {% if section.settings.lead_txt != blank %}
                  <p class="mb-0">
                      {{ section.settings.lead_txt }}
                  </p>
                {% endif %}
            </div>
        </div>
        {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
            <div class="{{ block.settings.alignment }} swiper-slide" data-block-id="{{ block.id }}"> 
                {% if block.settings.title != blank %}
                    <div class="col-xl-8 col-lg-9 col-md-10 px-0 mx-auto mb-md-5 mb-4">
                        <div style="box-shadow: 0 2px 2px rgba(0,0,0,0.25);">
                            <div class="align-items-center justify-content-md-between row no-gutter p-3" style="background-color:#f6f6f6;">
                                {% if block.settings.author_name != blank %}
                                    <div class="mb-n3 pe-3 col-md-8">{{ block.settings.author_name }}</div>
                                    <div class="d-flex mt-md-n1 col-md-4 mt-2 star-icons justify-content-md-end">
                                        <span class="d-flex">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#ffd000" class="bi bi-star-fill" viewBox="0 0 16 16">
                                                <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                                            </svg>
                                        </span>
                                        <span class="d-flex">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#ffd000" class="bi bi-star-fill" viewBox="0 0 16 16">
                                                <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                                            </svg>
                                        </span>
                                        <span class="d-flex">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#ffd000" class="bi bi-star-fill" viewBox="0 0 16 16">
                                                <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                                            </svg>
                                        </span>
                                        <span class="d-flex">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#ffd000" class="bi bi-star-fill" viewBox="0 0 16 16">
                                                <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                                            </svg>
                                        </span>
                                        <span class="d-flex">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#ffd000" class="bi bi-star" viewBox="0 0 16 16">
                                                <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"/>
