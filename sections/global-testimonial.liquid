                                        <span class="ms-1">0</span>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <a class="text-primary d-flex align-items-center" href="#">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi me-1 bi-share-fill" viewBox="0 0 16 16">
                                                <path d="M11 2.5a2.5 2.5 0 1 1 .603 1.628l-6.718 3.12a2.499 2.499 0 0 1 0 1.504l6.718 3.12a2.5 2.5 0 1 1-.488.876l-6.718-3.12a2.5 2.5 0 1 1 0-3.256l6.718-3.12A2.5 2.5 0 0 1 11 2.5z"/>
                                            </svg>
                                            Share
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>     
                {% endif %}
            </div>
        {% endfor %}
        {% endif %} 
    </div>
</section>



{% schema %}
    {
        "name": "Global Testimonial",
        "class": "global-testimonial-text",
        "settings": [
            {
                "type": "header",
                "content": "Layout"
            },
            {
                "type": "checkbox",
                "id": "fluid_layout",
                "label": "Full Width Layout?",
                "default": false
            },
            {
                "type": "header",
                "content": "Content"
            },
            {
                "type": "text",
                "id": "heading_txt",
                "label": "Heading Text"
            },
            {
                "type": "richtext",
                "id": "lead_txt",
                "label": "Lead Text"
            },
            {
                "type": "header",
                "content": "Styling"
            },
            {
                "type": "color",
                "id": "section_bg_color",
                "label": "Background Color",
                "default": "#FFFFFF"
            },
            {
                "type": "color",
                "id": "section_text_color",
                "label": "Text Color",
                "default": "#000000"
            },
            {
                "type": "image_picker",
                "id": "bg_img",
                "label": "Background Image"
            },
            {
                "type": "checkbox",
                "id": "enable",
                "label": "Enable Overlay?",
                "default": false
            },
            {
                "type": "color",
                "id": "overlay_color",
                "label": "Overlay Color",
                "default": "#000"
            },
            {
                "type":"range",
                "id":"opacity",
                "min":0,
                "max":1,
                "step":0.1,
                "label":"Opacity",
                "default":0.5
            },
            {
                "type": "header",
                "content": "Carousel Option"
            },
            {
                "type": "checkbox", 
                "id": "nav_arrows",
                "label": "Arrows Navigation",
                "default": true 
            },
            {
                "type": "checkbox",
                "id": "nav_dots",
                "label": "Dots Navigation",
                "default": true
            }
        ],
        "blocks": [
            {
                "type": "logowidthtext",
                "name": "Logo Widthtext Block",
                "settings": [
                    {
                        "type": "header",
                        "content": "Content"
                    },
                    {
                        "type": "text",
                        "id": "quote_logo",
                        "label": "Logo SVG Image?"
                    },
                    {
                        "type": "richtext",
                        "id": "title",
                        "label": "Description",
                        "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam pulvinar ac tortor imperdiet commodo.</p>"
                    },
                    {
                        "type": "richtext",
                        "id": "author_name",
                        "label": "Name or Info"
                    },
                    {
                        "type": "header",
                        "content": "Styling"
                    },
                    {
                        "type": "select",
                        "id": "alignment",
                        "label": "Alignment",
                        "options": [
                            {
                                "value": "text-center",
                                "label": "Center"
                            },
                            {
                                "value": "text-left",
                                "label": "Left"
                            },
                            {
                                "value": "text-right",
                                "label": "Right"
                            }
                        ],
                        "default": "text-center"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Global Testimonial",
                "category": "Content"
            }
        ]
    }
{% endschema %}

